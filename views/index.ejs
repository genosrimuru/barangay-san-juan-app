             <label >Budget: </label>
             <input id="newbudget" type="text" required><br>
             <label>Social Class: </label>
             <input id="newclass" type="text" required><br>
             <label>Educational Attainment: </label>
             <input id="neweducational" type="text" required><br>
             <button id="new-record">Update</button>&nbsp <button id="form-close">Close</button>
          </form>
      </div>


      <div id="financial-view">


        <p id="financial-title">FINANCIAL AID</p>
