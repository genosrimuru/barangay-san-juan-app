            <hr>
        </nav>
      
      
  
      <div id="Index-Table">
          <span id="visualization-title">VISUALIZATION</span>
          <br>
          <span id="filter-text">FILTER:</span>
          <select id="visualization-filter">
            <option value="0">Social Class</option>
            <option value="1">Gender</option>
            <option value="2">Civil Status</option>
            <option value="3">Educational Attainment</option>
          </select>
          <button id="visualization-filter-btn">GO</button>
          <table id="visualization-header">
            <tr>
              <th>Type: Barangay</th>
              <th>Municipality: Hagonoy</th>
              <th>Province: Bulacan</th>
              <th>Region: III</th>
              <th>Island Group: Luzon</th>
              <th>Postal Code: 3002</th>
            </tr>
          </table>
          <div class="tables-chart">
            <div id="chart-border">
              <div id="visualization-legends">
              </div>
              <div id="visualization-chart"></div>
              <span class="chart-bold">Zone | Purok</span>
            </div>
            <div class="more-visualization">
              <table id="visualization-table">
              </table>
              <div class="bottom-visualization">
                <table id="visualization-total">
                </table>
                <div id="visualization-total-data">
                  <span id="vtotal-title">TOTAL DATA</span>
                  <span id="vtotal-data">123898</span>
                </div>
              </div>
            </div>
          </div>
          <span id="visualization-hint">San Juan is situated at approximately 14.8661, 120.7414, in the island of Luzon. Elevation at these coordinates is estimated at 8.1 meters or 26.6 feet above mean sea level.</span>
      </div>


      <div id="population-view">
        
        <button id="btn-add">ADD</button>
      <label id="buhay-label" >Social Class:</label>
          <select id="buhay">
              <option value="1" selected>1 = Poor</option>
              <option value="2">2 = Low income</option>
              <option value="3">3 = Middle income</option>
              <option value="4">4 = High income</option>
          </select>
      <label id="purok-label" >Zone</label>
          <select id="zone">
              <option value="1" selected>1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
          </select>
          <div class="button-sa-filter">
          <button  id="btn-filter"><i class="fas fa-check"></i></button>
          <button id="btn-filter-data" id="btn-reset"><i class="fas fa-redo-alt"></i></button>
        </div>
          <br>
          <table id="Population-Table"></table>
          
          
      </div>
      <br>
